{
  "name": "@blokdots/components",
  "version": "2.5.0",
  "description": "blokdots Virtual Components to use in your projects.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild ./src/index.js --platform=node --loader:.ico=dataurl --loader:.html=dataurl --loader:.svg=dataurl --loader:.css=dataurl --loader:.min.js=dataurl --bundle --outfile=dist/index.js --external:johnny-five --external:socket.io --external:ws && tsc --emitDeclarationOnly && rollup -c",
    "build:types": "tsc --emitDeclarationOnly && rollup -c",
    "dev": "esbuild ./src/index.js --platform=node --loader:.ico=dataurl --loader:.html=dataurl --loader:.svg=dataurl --loader:.css=dataurl --loader:.min.js=dataurl --bundle --watch --outfile=dist/index.js --external:johnny-five --external:socket.io --external:ws",
    "prettier": "prettier --write 'src/**/*.{t,j}s'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blokdots/components.git"
  },
  "keywords": [
    "blokdots",
    "Arduino",
    "hardware prototyping"
  ],
  "author": "blokdots",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blokdots/components/issues"
  },
  "homepage": "https://github.com/blokdots/components#readme",
  "devDependencies": {
    "@types/qr-image": "^3.2.7",
    "@types/ws": "^8.5.5",
    "esbuild": "^0.19.3",
    "johnny-five": "git://github.com/blokdots/johnny-five.git#serialport10",
    "prettier": "^3.0.3",
    "rollup": "^3.29.2",
    "rollup-plugin-dts": "^6.0.2",
    "socket.io": "^4.7.2",
    "typescript": "^5.2.2",
    "ws": "^8.14.1"
  },
  "dependencies": {
    "node-pixel": "^0.11.0",
    "oled-font-5x7": "^1.0.3",
    "oled-js": "git://github.com/blokdots/oled-js#blokdots",
    "qr-image": "^3.2.0"
  },
  "peerDependencies": {
    "johnny-five": "git://github.com/blokdots/johnny-five.git#serialport10",
    "socket.io": "^4.7.1",
    "ws": "^8.13.0"
  }
}
